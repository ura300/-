// До 10 яблок включительно.
#include <iostream>
using namespace std;
int main() {
    system("chcp 65001");
    int n;
    int o;
    cout << "Введите число яблок:" << endl;
    cin >> n;
    o = n%10;
    if(n>=10 and n<21)
        cout<< n << " яблок"<<endl;
    switch (o) {

        case 1:
            cout<< n << " яблоко"<<endl;
            break;
        case 2: case 3: case 4:
            cout<< n << " яблока"<<endl;
            break;
        case 0: case 5: case 6: case 7: case 8: case 9:
            cout<< n << " яблок"<<endl;
            break;
    }
    return 0;
}

//  Для большего количества яблок.
#include <string>
using namespace std;
int main()
{
    system("chcp 65001");
    int k;
    string apple = "яблок";
    cout<<"Введите число яблок:\n";
    cin >> k;
    {
        if ((k==1) || (k % 10 == 1)) {
            apple = apple +"о";
        }
        if ((k > 1 && k < 5) || (k % 10 > 1 && k % 10 < 5)) {
            apple = apple + "а";
        }
        if ((k >= 5 && k < 10) || (k % 10 >= 5 && k % 10 < 10) || (k % 100 > 10 && k % 100 < 15 )) {
            apple = "яблок";
        }

        cout << k << ' ' << apple << endl;

    }
}
